<h1 class="text-2xl font-bold mb-4">
  Log in
</h1>

<%= form_card do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= form_group do %>
      <%= f.label :email, class: form_label_classes %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: form_input_classes %>
    <% end %>

    <%= form_group do %>
      <%= f.label :password, class: form_label_classes %>
      <%= f.password_field :password, autocomplete: "current-password", class: form_input_classes %>
    <% end %>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: form_submit_classes %>
    </div>
  <% end %>

   <% if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "#{form_submit_classes} mt-10 bg-opacity-40 border" %><br />
   <% end %>

    <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
    <% end %>  

<% end %>
