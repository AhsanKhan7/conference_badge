<h1 class="text-2xl font-bold mb-4">
  New Attendee - <%= @event.name %>
</h1>

<%= form_with model: [@event, @attendee] do |f| %>
  <div class="mb-2">
    <%= f.label :full_name %>
    <%= f.text_field :full_name, class: "border p-1" %>
  </div>

  <div class="mt-2">
    <%= f.label :company %>
    <%= f.text_field :company, class: "border p-1" %>
  </div>

  <div class="mt-2">
    <%= f.label :role %>
    <%= f.text_field :role, class: "border p-1" %>
  </div>

  <div class="mt-2">
    <%= f.label :email %>
    <%= f.text_field :email, class: "border p-1" %>
  </div>

  <%= f.submit "Add Attendee", class: "mt-2 border px-3 py-1" %>
<% end %>