<h1 class="text-2xl font-bold mb-4">
  Attendees - <%= @event.name%>
</h1>

<%= link_to "Add Attendee", new_event_attendee_path(@event), class: "underline" %>

<ul class="mt-4">
  <%= @attendees.each do |a| %>
  <li class="mb-2">
    <strong><%= a.full_name %></strong>
    <span class="text-gray-500">
     - <%= a.company %>
    </span>

    <div class="mt-2">
      <%= qr = RQRCode::QRCode.new(checkin_url(a.token))%>

      <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120">
        <%= raw qr.as_svg(module_size: 3) %>
      </svg>
    </div>

    <div class="mt-2">
      <%= link_to "Download Badge",
          badge_event_attendee_path(@event, a),
          class: "underline"
      %>
    </div>
    
  </li>
 <% end %>
</ul>