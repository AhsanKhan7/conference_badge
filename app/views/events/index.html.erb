<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">My Events</h1>
  <%= link_to "New Event", new_event_path,
      class: "bg-black text-white px-4 py-2 rounded text-sm" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  <% @events.each do |event| %>

  <div class="flex justify-between p-5 bg-white rounded-lg shadow-sm border hover:shadow-md transition">
    <%= link_to event_path(event), class: "w-fit block cursor-pointer" do %>
      <h2 class="text-lg font-semibold">
        <%= event.name %>
      </h2>
      <p class="text-sm text-gray-500 mt-1">
        <%= event.date %> â€¢ <%= event.location %>
      </p>
    <% end %>

    <div>
      <%= link_to "Delete", event_path(event), 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this event?" },
      class: "text-red-600 text-sm" %>
    </div>
  </div>
  <% end %>
</div>
