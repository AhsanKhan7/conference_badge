<h1 class="text-2xl font-bold mb-4">My Events</h1>

<%= link_to "New Event", new_event_path, class: "underline" %>


<ul class="mt-4">
  <% @events.each do |event| %>
    <li class="mb-2">
      <% link_to event.name, event_path(event), class: "font-medium" %>
      <span class="text-sm text-grey-500">
        (<%= event.date %>)
      </span> 
    </li>
<% end %>
</ul>
